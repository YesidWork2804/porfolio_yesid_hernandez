---
import Angular from "./icons/Angular.astro";
import Dart from "./icons/Dart.astro";
import Firebase from "./icons/Firebase.astro";
import Flutter from "./icons/Flutter.astro";
import Git from "./icons/Git.astro";
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import LinkButton from "./LinkButton.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  ANGULAR: {
    name: "Angular",
    class: "bg-black text-white",
    icon: Angular,
  },
  FLUTTER: {
    name: "Flutter",
    class: "bg-black text-white",
    icon: Flutter,
  },
  FIREBASE: {
    name: "Firebase",
    class: "bg-black text-white",
    icon: Firebase,
  },
  GIT: {
    name: "Git",
    class: "bg-black text-white",
    icon: Git,
  },
  DART: {
    name: "Dart",
    class: "bg-black text-white",
    icon: Dart,
  },
};
const PROJECTS = [
  {
    title: "Barber Finder",
    description:
      "Desarrollé la app con Flutter, empleando Firebase para la gestión en la nube. Utilicé geolocator para la ubicación, implementé el manejo de estados y eventos con bloc, y aplicé programación reactiva con rxdart. La interfaz, diseñada con material design, es responsiva.Colaboré en equipo siguiendo la metodología Scrum.",
    link: "https://svgl.vercel.app/",
    github: "https://github.com/jrdeavila/barber_finder",
    image: "/projects/projectBarber.png",
    tags: [TAGS.FLUTTER, TAGS.FIREBASE, TAGS.GIT, TAGS.DART],
  },
  {
    title: "Country App",
    description:
      "Creé una aplicación en Angular para facilitar a los usuarios la exploración de información detallada sobre países. Ofrezco opciones de búsqueda por capital, país y región, con un diseño responsivo y atractivo. Destaco por un eficiente manejo de estados, integración limpia con una API de países y la aplicación de buenas prácticas como estructura modular, inyección de dependencias y comentarios descriptivos",
    link: "https://github.com/jrdeavila/barber_finder",
    image: "/projects/projectPaises.png",
    tags: [TAGS.TAILWIND, TAGS.ANGULAR, TAGS.GIT],
  },
];
---

<section class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article>
        <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">
          {title}
        </h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul class="flex gap-x-2 flex-row mb-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <img
          loading="lazy"
          class="rounded shadow-2xl shadow-white/10 aspect-video"
          src={image}
          alt={`Captura de pantalla del proyecto ${image}`}
        />
        <footer class="flex gap-x-4 items-end justify-start mt-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Ver código fuente
            </LinkButton>
          )}
          <LinkButton href={link}>
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <>
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" />
                <path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" />
                <path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" />
                <path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" />
                <path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" />
                <path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" />
                <path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" />
                <path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" />
                <path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" />
              </>
            </svg>
            Ir al sitio web
          </LinkButton>
        </footer>
      </article>
    ))
  }
</section>
